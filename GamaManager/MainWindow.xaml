                                    Height="200"    
                                >
                                    <Image.Source>
                                        <BitmapImage
                                            UriSource="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male-128.png"    
                                        />
                                    </Image.Source>
                                </Image>
                                <StackPanel>
                                    <TextBlock
                                        x:Name="userProfileNameLabel"
                                        Margin="15"
                                        FontSize="24"
                                        Text="Имя пользователя"    
                                    />
                                    <TextBlock
                                        x:Name="userProfileCountryLabel"
                                        Margin="15"
                                        FontSize="14"
                                        Text="Россия"    
                                    />
                                </StackPanel>
                                <Button
                                    Margin="25"
                                    HorizontalAlignment="Right"
                                    Width="175"
                                    Height="35"
                                    Content="Редактировать профиль"    
                                    Click="OpenEditProfileHandler"
                                />
                            </DockPanel>
                            <DockPanel>
                                <DockPanel
                                    Margin="25"
                                >
                                    <StackPanel
                                        Margin="25"
                                        DockPanel.Dock="Right"
                                        Width="350"
                                    >
                                        <StackPanel
                                            Margin="0 10"
                                            Orientation="Horizontal"    
                                        >
                                            <TextBlock
                                                Margin="10 0"
                                                Text="Игры"    
                                                FontSize="20"
                                                Foreground="White"
                                            />
                                            <TextBlock
                                                x:Name="countGamesLabel"
                                                Margin="10 0"
                                                Text="0"    
                                                FontSize="18"
                                                Foreground="LightGray"
                                            />
                                        </StackPanel>
                                        <StackPanel
                                            Margin="0 10"
                                            Orientation="Horizontal"    
                                        >
                                            <TextBlock
                                                Margin="10 0"
                                                Text="Друзья"    
                                                FontSize="20"
                                                Foreground="White"
                                            />
                                            <TextBlock
                                                x:Name="countFriendsLabel"
