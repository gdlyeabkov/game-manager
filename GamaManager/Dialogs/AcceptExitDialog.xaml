<Window x:Class="GamaManager.Dialogs.AcceptExitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamaManager.Dialogs"
        mc:Ignorable="d"
        Title="Выход"
        Height="250"
        Width="800"
    >
    <StackPanel>
        <TextBlock
            Margin="15"
            Text="Вы собираетесь выйти из Office ware game manager. Вам потребуется заново ввести&#10;ваши логин и парроль, чтобы снова войти в Office ware game manager."
        />

        <TextBlock
            Margin="15"
            Text="Вы хотите продолжить?"
        />
        <StackPanel
            Orientation="Horizontal"    
        >
            <Button
                Width="125"
                Height="25"
                Margin="10"
                Content="Выйти"
                Click="CloseClientHandler"
            />
            <Button
                Width="125"
                Height="25"
                Margin="10"
                Content="Отмена"
                Click="CancelHandler"
            />
        </StackPanel>
    </StackPanel>
</Window>
