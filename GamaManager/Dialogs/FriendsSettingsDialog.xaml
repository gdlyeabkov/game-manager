<Window x:Class="GamaManager.Dialogs.FriendsSettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GamaManager.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    Title="Настройки"
    Height="800"
    Width="800"
    Closed="SaveSettingsHandler"
>
    <DockPanel>
        <StackPanel
            Width="175"    
        >
            <TextBlock
                Foreground="SkyBlue"
                Margin="15 5"
                Text="Настройки друзей"    
            />
            <TextBlock
                FontSize="14"
                Margin="15 5"
                Text="Список друзей"    
                DataContext="0"
                MouseLeftButtonUp="SelectSettingsItemHandler"
            />
            <TextBlock
                FontSize="14"
                Margin="15 5"
                Text="Чат"    
                DataContext="1"
                MouseLeftButtonUp="SelectSettingsItemHandler"
            />
            <TextBlock
                FontSize="14"
                Margin="15 5"
                Text="Размер и масштаб"    
                DataContext="2"
                MouseLeftButtonUp="SelectSettingsItemHandler"
            />
            <TextBlock
                FontSize="14"
                Margin="15 5"
                Text="Уведомления"    
                DataContext="3"
                MouseLeftButtonUp="SelectSettingsItemHandler"
            />
            <TextBlock
                FontSize="14"
                Margin="15 5"
                Text="Голосовые чаты"    
                DataContext="4"
                MouseLeftButtonUp="SelectSettingsItemHandler"
            />
        </StackPanel>
        <TabControl
            x:Name="settingsControl"
            SelectedIndex="0"
        >
            <TabItem
                Visibility="Collapsed"    
            >
                <StackPanel>
                    <TextBlock
                        Text="Список друзей"
                        Margin="15"
                        FontSize="24"
                    />
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <StackPanel>
                            <TextBlock
                                Margin="15"
                                Text="Добавлять ники после имен друзей"    
                            />
                            <StackPanel
                                Orientation="Horizontal"    
                            >
                                <Image
                                    Margin="15"
                                    Width="50"    
                                    Height="50"    
                                    ImageFailed="SetDefaultAvatarHandler"
                                >
                                    <Image.Source>
                                        <BitmapImage
                                            UriSource="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male-128.png"    
                                        />
                                    </Image.Source>
                                </Image>
                                <StackPanel
                                    VerticalAlignment="Center"
                                    Margin="15 0"    
                                >
                                    <TextBlock
                                        x:Name="addNickAfterFriendNameLabel"
                                        FontSize="14"
                                        Margin="15 5"
                                        Text="Пример друга"    
                                    />
                                    <TextBlock
                                        Margin="15 5"
                                        Text="В сети"    
                                    />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="notAddNickAfterFriendNameBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleAddNickAfterFriendNameHandler"
                            />
                            <ToggleButton
                                x:Name="addNickAfterFriendNameBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleAddNickAfterFriendNameHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Группировать друзей по игре"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="notGroupFriendsByGameBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleGroupFriendsByGameHandler"
                            />
                            <ToggleButton
                                x:Name="groupFriendsByGameBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleGroupFriendsByGameHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Скрывать друзей не в сети из своих категорий"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="showOfflineFriendsFromCategoriesBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleHideOfflineFriendsFromCategoriesHandler"
                            />
                            <ToggleButton
                                x:Name="hideOfflineFriendsFromCategoriesBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleHideOfflineFriendsFromCategoriesHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Скрыть друзей с категорией из списков В сети и Не в сети"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="showFriendsFromCategoriesBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleHideFriendsFromCategoriesHandler"
                            />
                            <ToggleButton
                                x:Name="hideFriendsFromCategoriesBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleHideFriendsFromCategoriesHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Игнорировать статус Нет на месте при сортировке друзей"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="notIgnoreNotHereStatusWithSortBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleIgnoreNotHereStatusWithSortHandler"
                            />
                            <ToggleButton
                                x:Name="ignoreNotHereStatusWithSortBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleIgnoreNotHereStatusWithSortHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Входить в систему друзей при запуске клиента Office ware game manager"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="notLoginInFriendSystemAfterClientLoadedBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleLoginInFriendSystemAfterClientLoadedHandler"
                            />
                            <ToggleButton
                                x:Name="loginInFriendSystemAfterClientLoadedBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleLoginInFriendSystemAfterClientLoadedHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Включить анимированные аватары и анимированные рамки&#10;аватаров для списка друзей и чата"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="disableAnimationAvatarsBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleEnableAnimationAvatarsHandler"
                            />
                            <ToggleButton
                                x:Name="enableAnimationAvatarsBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleEnableAnimationAvatarsHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </TabItem>
            <TabItem
                Visibility="Collapsed"    
            >
                <StackPanel>
                    <TextBlock
                        Text="Чат"
                        Margin="15"
                        FontSize="24"
                    />
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Прикреплять чаты к списку друзей"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="attachChatToFriendListBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleAttachChatToFriendListHandler"
                            />
                            <ToggleButton
                                x:Name="notAttachChatToFriendListBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleAttachChatToFriendListHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Открывать новые чаты в новом окне, а не в новой вкладке"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="openNewChatInNewTabBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleOpenNewChatInNewWindowHandler"
                            />
                            <ToggleButton
                                x:Name="openNewChatInNewWindowBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleOpenNewChatInNewWindowHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Не встраивать изображения и другие медиафайлы"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="includeImagesAndMediaFilesBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleNotIncludeImagesAndMediaFilesHandler"
                            />
                            <ToggleButton
                                x:Name="notIncludeImagesAndMediaFilesBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleNotIncludeImagesAndMediaFilesHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <StackPanel>
                            <TextBlock
                                Margin="15"
                                Text="Запоминать открытые чаты"    
                            />
                            <TextBlock
                                Margin="15"
                                Text="При запуске Office ware game manager восстанавливает вкладки ранее открытых&#10;чатов. Эта функция не работает, если Office ware game manager запускается при&#10;запуске компьютера"    
                            />
                        </StackPanel>
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="forgetChatsBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleRememberChatsHandler"
                            />
                            <ToggleButton
                                x:Name="rememberChatsBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleRememberChatsHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Показывать время в 24-часовом формате"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="showTimeIn12Btn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleShowTimeIn24Handler"
                            />
                            <ToggleButton
                                x:Name="showTimeIn24Btn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleShowTimeIn24Handler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Отключить проверку орфографии в чате"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="enableSpellCheckBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleDisableSpellCheckHandler"
                            />
                            <ToggleButton
                                x:Name="disableSpellCheckBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleDisableSpellCheckHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Отключить анимированные настройки"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="enableAnimationBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleDisableAnimationHandler"
                            />
                            <ToggleButton
                                x:Name="disableAnimationBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleDisableAnimationHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <StackPanel
                        Margin="0 15"
                        Background="Gray"
                    >
                        <TextBlock
                            Margin="15 5"
                            Text="Изменить настройки фильтрации чата"
                            Foreground="SkyBlue"
                            FontSize="14"
                        />
                        <TextBlock
                            Margin="15 5"
                            Text="Текущая настройка: скрывать ругательства и оскорбления ото всех, кроме друзей"    
                        />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem
                Visibility="Collapsed"    
            >
                <StackPanel>
                    <TextBlock
                        Text="Размер и масштаб"
                        Margin="15"
                        FontSize="24"
                    />
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Компактный вид списка друзей и чатов"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="friendListAndChatsUnCompactViewBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleFriendListAndChatsCompactViewHandler"
                            />
                            <ToggleButton
                                x:Name="friendListAndChatsCompactViewBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleFriendListAndChatsCompactViewHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel
                        Background="LightGray"
                        Margin="0 15"
                    >
                        <TextBlock
                            Margin="15"
                            Text="Компактный вид для избранных"    
                        />
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="15 0"
                        >
                            <ToggleButton
                                x:Name="favoriteUnCompactViewBtn"
                                Width="75"
                                Height="30"
                                Content="Выкл"
                                IsChecked="False"
                                Click="ToggleFavoriteCompactViewHandler"
                            />
                            <ToggleButton
                                x:Name="favoriteCompactViewBtn"
                                Width="75"
                                Height="30"
                                Content="Вкл"  
                                IsChecked="True"
                                Click="ToggleFavoriteCompactViewHandler"
                            />
                        </StackPanel>
                    </DockPanel>
                    <TextBlock
                        Text="Размер шрифта в чатах"
                        Margin="15"
                        FontSize="14"
                    />
                    <StackPanel
                        x:Name="chatFontSizePanel"
                        Margin="0 15"
                        Orientation="Horizontal"    
                    >
                        <Button
                            x:Name="smallChatFontSizeBtn"
                            Height="30"
                            Width="125"
                            Margin="15 0"
                            FontSize="12"
                            Content="Маленький"
                            DataContext="small"
                            Click="ToggleChatFontSizeHandler"
                        />
                        <Button
                            x:Name="standardChatFontSizeBtn"
                            Height="30"
                            Width="125"
                            Margin="15 0"
                            FontSize="14"
                            Content="Стандартный"
                            DataContext="standard"
                            Click="ToggleChatFontSizeHandler"
                        />
                        <Button
                            x:Name="bigChatFontSizeBtn"
                            Height="30"
                            Width="125"
                            Margin="15 0"
                            FontSize="16"
                            Content="Крупный"
                            DataContext="big"
                            Click="ToggleChatFontSizeHandler"
                        />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem
                Visibility="Collapsed"    
            >
                <StackPanel>
                    <TextBlock
                        Text="Уведомления"
                        Margin="15"
                        FontSize="24"
                    />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="35"    
                            />
                            <RowDefinition
                                Height="35"    
                            />
                            <RowDefinition
                                Height="35"    
                            />
                            <RowDefinition
                                Height="35"    
                            />
                            <RowDefinition
                                Height="35"    
                            />
                            <RowDefinition
                                Height="35"    
                            />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Уведомления от друзей"
                            Grid.Row="0"
                            Grid.Column="0"
                        />
                        <TextBlock
                            TextAlignment="Center"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Показывать&#10;уведомления"
                            Grid.Row="0"
                            Grid.Column="1"
                        />
                        <TextBlock
                            TextAlignment="Center"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Воспроизводить&#10;звук"
                            Grid.Row="0"
                            Grid.Column="2"
                        />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Когда друг заходит в игру"
                            Grid.Row="1"
                            Grid.Column="0"
                        />
                        <CheckBox
                            x:Name="friendPlayedNotificationCheckBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="1"
                            Grid.Column="1"
                        />
                        <CheckBox
                            x:Name="friendPlayedSoundCheckBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="1"
                            Grid.Column="2"
                        />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Когда друг подключается к сети"
                            Grid.Row="2"
                            Grid.Column="0"
                        />
                        <CheckBox
                            x:Name="friendOnlineNotificationCheckBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="2"
                            Grid.Column="1"
                        />
                        <CheckBox
                            x:Name="friendOnlineSoundCheckBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="2"
                            Grid.Column="2"
                        />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Когда я получаю личное сообщение"
                            Grid.Row="3"
                            Grid.Column="0"
                        />
                        <CheckBox
                            x:Name="friendSendMsgNotificationCheckBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="3"
                            Grid.Column="1"
                        />
                        <CheckBox
                            x:Name="friendSendMsgSoundCheckBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="3"
                            Grid.Column="2"
                        />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Когда мне пишут в групповом чате"
                            Grid.Row="4"
                            Grid.Column="0"
                        />
                        <CheckBox
                            x:Name="friendSendTalkMsgNotificationCheckBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="4"
                            Grid.Column="1"
                        />
                        <CheckBox
                            x:Name="friendSendTalkMsgSoundCheckBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="4"
                            Grid.Column="2"
                        />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="События или объявления в группах"
                            Grid.Row="5"
                            Grid.Column="0"
                        />
                        <CheckBox
                            x:Name="friendSendTalkEventNotificationCheckBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="5"
                            Grid.Column="1"
                        />
                        <CheckBox
                            x:Name="friendSendTalkEventSoundCheckBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Grid.Row="5"
                            Grid.Column="2"
                        />
                    </Grid>
                    <TextBlock
                        Text="Если мне отправили сообщение окно мигает:"
                        Margin="15"
                        FontSize="14"
                    />
                    <StackPanel
                        x:Name="blinkTypePanel"
                        Margin="0 15"
                        Orientation="Horizontal"    
                    >
                        <Button
                            x:Name="alwaysSendMsgBlinkWindowTypeBtn"
                            Height="30"
                            Width="125"
                            Margin="15 0"
                            FontSize="14"
                            Content="Всегда"
                            DataContext="always"
                            Click="ToggleSendMsgBlinkWindowTypeHandler"
                        />
                        <Button
                            x:Name="minimizeSendMsgBlinkWindowTypeBtn"
                            Height="30"
                            Width="175"
                            Margin="15 0"
                            FontSize="14"
                            Content="Только в свернутом виде"
                            DataContext="minimize"
                            Click="ToggleSendMsgBlinkWindowTypeHandler"
                        />
                        <Button
                            x:Name="neverSendMsgBlinkWindowTypeBtn"
                            Height="30"
                            Width="125"
                            Margin="15 0"
                            FontSize="14"
