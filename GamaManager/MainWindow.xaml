<Window x:Class="GamaManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GamaManager"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    xmlns:p="clr-namespace:GamaManager.Properties"
    xmlns:sparrow="http://sparrowtoolkit.codeplex.com/wpf"
    xmlns:oxy="http://oxyplot.org/wpf"        
    Title="Office Ware Game Manager"
    Height="450"
    Width="800"
    WindowState="Maximized"
    Loaded="ClientLoadedHandler"
    Closed="ClientClosedHandler"
>
    <Window.Resources>
        <Storyboard x:Key="HighLightAnim">
            <ThicknessAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="highlight_bar" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame/>
                <SplineThicknessKeyFrame/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <DockPanel
        x:Name="game"
    >
        <MediaElement
            x:Name="mainAudio"
            LoadedBehavior="Manual"
            Source="/Sounds/notification.wav"
        />
        <StackPanel
            x:Name="friendNotifications"    
            DockPanel.Dock="Top"
        >
        </StackPanel>
        <StackPanel
            x:Name="friendRequests"    
            DockPanel.Dock="Top"
        />
        <StackPanel
            x:Name="groupRequests"    
            DockPanel.Dock="Top"
        />
        <Menu
            DockPanel.Dock="Top"    
        >
            <MenuItem
                Header="Office ware game manager"    
            >
                <MenuItem
                    Header="{x:Static p:Resources.gameManagerMenuItemLoginToAnotherAccountLabelContent}"
                    Click="LoginToAnotherAccountHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.gameManagerMenuItemSettingsLabelContent}"
                    Click="OpenSettingsHandler"    
                />
            </MenuItem>
            <MenuItem
                Header="{x:Static p:Resources.viewMenuItemLabelContent}"    
            >
                <MenuItem
                    Header="Скрытые игры"
                    Click="OpenHiddenGamesHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.viewMenuItemPlayerLabelContent}"
                    Click="OpenPlayerHandler"
                />
                <MenuItem
                    Header="Скриншоты"
                    Click="ShowScreenShotUploadersDialogHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.newsUpdatedLabelContent}"
                    Click="ShowOffersHandler"
                />
            </MenuItem>
            <MenuItem
                Header="{x:Static p:Resources.friendsMenuItemLabelContent}"    
            >
                <MenuItem
                    x:Name="friendsListLabel"
                    Header="{x:Static p:Resources.friendsListLabelContent}"
                    Click="OpenFriendsDialogHandler"
                />
                <Separator />
                <MenuItem
                    Header="{x:Static p:Resources.friendsMenuItemAddFriendLabelContent}"
                    Click="OpenAddFriendDialogHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.updateNameOrAvatarLabelContent}"
                    Click="SetNameOrAvatarHandler"
                />
                <Separator />
                <MenuItem
                    x:Name="onlineUserStatusMenuItem"
                    IsCheckable="True"
                    Header="{x:Static p:Resources.onlineLabelContent}"
                    DataContext="online"
                    Click="UpdateUserStatusHandler"
                />
                <!--
                <MenuItem
                    Header="Нет на месте"
                    DataContext="not here"
                    Click="UpdateUserStatusHandler"
                />
                <MenuItem
                    Header="Отошел"
                    DataContext="away"
                    Click="UpdateUserStatusHandler"
                />
                -->
                <MenuItem
                    x:Name="offlineUserStatusMenuItem"
                    IsCheckable="True"
                    Header="{x:Static p:Resources.offlineLabelContent}"
                    DataContext="offline"
                    Click="UpdateUserStatusHandler"
                />
            </MenuItem>
            <MenuItem
                Header="{x:Static p:Resources.gamesMenuItemContent}"
            >
                <MenuItem
                    Header="{x:Static p:Resources.gamesLibraryLabelContent}"    
                    Click="OpenGamesLibraryHandler"
                />
                <Separator />
                <MenuItem
                    Header="{x:Static p:Resources.activateGameLabelContent}"    
                    Click="OpenGameActivationHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.addExternalGameToMyLibraryLabelContent}"    
                    Click="AddExternalGameHandler"
                />
            </MenuItem>
            <MenuItem
                Header="{x:Static p:Resources.helpMenuItemLabelContent}"    
            >
                <MenuItem
                    Header="{x:Static p:Resources.helpMenuItemSystemInfoLabelContent}"
                    Click="OpenSystemInfoDialogHandler"
                />
            </MenuItem>
        </Menu>
        <StackPanel
            DockPanel.Dock="Top"
            Height="35"
            Background="Red"
        >
            <StackPanel
                Orientation="Horizontal"    
            >
                <materialDesign:PackIcon
                    x:Name="arrowBackBtn"
                    Kind="ArrowBack"
                    Width="20"
                    Height="20"
                    Margin="10"
                    Foreground="LightGray"
                    MouseLeftButtonUp="BackForHistoryHandler"
                />
                <materialDesign:PackIcon
                    x:Name="arrowForwardBtn"
                    Kind="ArrowForward"
                    Width="20"
                    Height="20"
                    Margin="10"
                    Foreground="LightGray"
                    MouseLeftButtonUp="ForwardForHistoryHandler"
                />
                <ComboBox
                    x:Name="storeMenu"
                    Margin="5 0"
                    Width="125"
                    HorizontalContentAlignment="Center"
                    Height="25"
                    SelectedIndex="0"
                    SelectionChanged="StoreItemSelectedHandler"
                >
                    <ComboBoxItem
                        Visibility="Collapsed"
                        Content="{x:Static p:Resources.storeMenuLabelContent}"
                    />
                    <ComboBoxItem
                        Content="Популярное"    
                    />
                    <ComboBoxItem
                        Content="Рекомендации"    
                    />
                    <ComboBoxItem
                        Content="Список желаемого"    
                    />
                    <ComboBoxItem
                        Content="Магазин очков"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.storeMenuItemNewsLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.storeMenuItemStatsLabelContent}"
                    />
                </ComboBox>
                <ComboBox
                    x:Name="libraryMenu"
                    Margin="5 0"
                    Width="125"
                    HorizontalContentAlignment="Center"
                    Height="25"
                    SelectedIndex="0"    
                    SelectionChanged="LibraryItemSelectedHandler"
                >
                    <ComboBoxItem
                        Visibility="Collapsed"
                        Content="{x:Static p:Resources.libraryMenuLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.libraryMenuItemHomeLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.libraryMenuItemCollectionsLabelContent}"    
                    />
                    <Separator />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.libraryMenuItemDownloadsLabelContent}"
                    />
                </ComboBox>
                <ComboBox
                    x:Name="communityMenu"
                    Margin="5 0"
                    Width="125"
                    HorizontalContentAlignment="Center"
                    Height="25"
                    SelectedIndex="0"    
                    SelectionChanged="CommunityItemSelectedHandler"
                >
                    <ComboBoxItem
                        Visibility="Collapsed"
                        Content="{x:Static p:Resources.communityMenuLabelContent}"
                    />
                    <ComboBoxItem
                        Content="Главная"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.communityMenuItemDiscussionsLabelContent}"
                    />
                    <ComboBoxItem
                        Content="Мастерская"    
                    />
                    <ComboBoxItem
                        Content="Торговая площадка"    
                    />
                    <ComboBoxItem
                        Content="Трансляции"    
                    />
                </ComboBox>
                <ComboBox
                    x:Name="profileMenu"
                    Margin="5 0"
                    Width="175"
                    HorizontalContentAlignment="Center"
                    Height="25"
                    SelectedIndex="0" 
                    SelectionChanged="ProfileItemSelectedHandler"
                >
                    <ComboBoxItem
                        Visibility="Collapsed"
                        Content="Имя пользователя"    
                    />
                    <ComboBoxItem
                        Content="Активность"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.profileMenuItemProfileLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.friendsLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.groupsLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.profileMenuItemContentLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.profileMenuItemIconsLabelContent}"
                    />
                    <ComboBoxItem
                        Content="Инвернтарь"    
                    />
                </ComboBox>
                <materialDesign:PackIcon
                    Margin="175 10 10 10"
                    Kind="Megaphone"
                    VerticalAlignment="Center"
                    Width="24"
                    Height="24"
                    MouseLeftButtonUp="OpenNewsHandler"
                />
                <materialDesign:PackIcon
                    Margin="10 0"
                    Kind="Email"
                    VerticalAlignment="Center"
                    Width="24"
                    Height="24"
                    MouseLeftButtonUp="ToggleNotificationsPopupHandler"
                />
                <Popup
                    x:Name="notificationsPopup"
                    Placement="Mouse"
                    StaysOpen="False"
                    Width="350"
                    Height="165"
                >
                    <Popup.Child>
                        <StackPanel
                            Background="LightGray"    
                        >
                            <StackPanel
                                Margin="10"
                                Orientation="Horizontal"
                            >
                                <materialDesign:PackIcon
                                    Kind="Chat"    
                                />
                                <TextBlock
                                    Margin="15 0"
                                    Text="Новых комментариев: 0"    
                                />
                            </StackPanel>    
                            <Separator />
                            <StackPanel
                                Margin="10"
                                Orientation="Horizontal"
                            >
                                <materialDesign:PackIcon
                                    Kind="Storage"    
                                />
                                <TextBlock
                                    Margin="15 0"
                                    Text="Новых предметов: 0"    
                                />
                            </StackPanel>                            
                            <Separator />
                            <StackPanel
                                Margin="10"
                                Orientation="Horizontal"
                            >
                                <materialDesign:PackIcon
                                    Kind="Add"    
                                />
                                <TextBlock
                                    x:Name="countNewRequestsLabel"
                                    Margin="15 0"
                                    Text="Новых приглашений: 0"    
                                />
                            </StackPanel>
                            <Separator />
                            <StackPanel
                                Margin="10"
                                Orientation="Horizontal"
                            >
                                <materialDesign:PackIcon
                                    Kind="Present"    
                                />
                                <TextBlock
                                    Margin="15 0"
                                    Text="Новых подарков: 0"    
                                />
                            </StackPanel>
                        </StackPanel>
                    </Popup.Child>
                </Popup>
                <ComboBox
                    x:Name="userMenu"
                    Margin="10"
                    Width="175"
                    SelectedIndex="0"
                    SelectionChanged="UserMenuItemSelectedHandler"
                >
                    <ComboBoxItem
                        Visibility="Collapsed"
                        Content="Имя пользователя"    
                    />
                    <ComboBoxItem
                        Content="Мой профиль"    
                    />
                    <ComboBoxItem
                        Content="Об аккаунте"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.logoutLabelContent}"    
                    />
                </ComboBox>
                <materialDesign:PackIcon
                    Kind="Rectangle"
                    VerticalAlignment="Center"
                    Margin="15 0"
                    Width="24"
                    Height="24"
                    MouseLeftButtonUp="ToggleFullScreenModeHandler"
                />
            </StackPanel>
            <!--
                <TextBlock
                    x:Name="userLoginLabel"
                    Text="Имя пользователя"
                    Margin="10"
                    HorizontalAlignment="Right"
                />
            -->
        </StackPanel>
        <TabControl
            x:Name="mainControl"
            SelectedIndex="0"
            SelectionChanged="ToggleWindowHandler"
        >
            <TabItem
                Visibility="Collapsed"    
            >
                <DockPanel>
                    <StackPanel
                        DockPanel.Dock="Bottom"
                        Height="35"
                        Background="Cyan"
                    >
                        <StackPanel
                            Margin="0 10"
                            Orientation="Horizontal"    
                            MouseLeftButtonUp="OpenFriendsDialogHandler"
                        >
                            <TextBlock
                                Margin="10 0"
                                Text="{x:Static p:Resources.friendsAndChatLabelContent}"
                            />
                            <materialDesign:PackIcon
                                Margin="10 0"
                                Kind="Add"    
                            />
                        </StackPanel>
                    </StackPanel>
                    <DockPanel
                        DockPanel.Dock="Left"    
                        Background="Green"
                    >
                        <StackPanel
                            DockPanel.Dock="Top"    
                            Height="30"
                        >
                            <TextBox
                                x:Name="keywordsLabel"
                                Margin="5"
                                TextChanged="FilterGamesHandler"
                            />
                        </StackPanel>
                        <ScrollViewer>
                            <StackPanel
                                x:Name="games"
                                Width="350"
                            />
                        </ScrollViewer>
                    </DockPanel>
                    <StackPanel
                        DockPanel.Dock="Right"
                        Background="Blue"
                    >
                        <StackPanel
                            x:Name="activeGame"
                        >
                            <StackPanel
                                Orientation="Horizontal"    
                            >
                                <Image
                                    x:Name="gamePhoto"
                                    Margin="15"
                                    Width="100"
                                    Height="100"
                                >
                                    <Image.Source>
                                        <BitmapImage
                                            UriSource="https://steamunlocked.net/wp-content/uploads/2020/07/guns-gore-and-cannoli-2-free-download.jpg"
                                        />
                                    </Image.Source>
                                </Image>
                                <StackPanel
                                    Margin="15"    
                                >
                                    <TextBlock
                                        x:Name="gameNameLabel"
                                        Margin="0 15"
                                        FontSize="18"
                                        Text="Игра"    
                                    />
                                    <Button
                                        x:Name="gameActionLabel"
                                        HorizontalAlignment="Left"
                                        Height="35"
                                        Width="125"
                                        Content="Установить"
                                        Click="GameActionHandler"    
                                    />
                                </StackPanel>
                                <materialDesign:PackIcon
                                    x:Name="removeGameBtn"
                                    Width="24"
                                    Height="24"
                                    Kind="Close"    
                                    MouseLeftButtonUp="RemoveGameHandler"
                                    Visibility="Collapsed"
                                />
                                <!--
                                <Button
                                    x:Name="removeGameBtn"
                                    Width="24"
                                    Height="24"
                                    Content="X"    
                                    Click="RemoveGameHandler"
                                    Visibility="Collapsed"
                                />
                            -->
                            </StackPanel>
                            <StackPanel
                                x:Name="gameDetails"
                                Visibility="Collapsed"
                                Margin="0 15"    
                            >
                                <StackPanel
                                    HorizontalAlignment="Right"    
                                >
                                    <Button
                                        Margin="15"
                                        Width="125"
                                        Height="25"
                                        Content="Написать обзор"    
                                        Click="OpenAddReviewHandler"
                                    />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                                Orientation="Horizontal"    
                                Background="LightGray"
                            >
                                <TextBlock
                                    Text="Поиск групп"
                                    Margin="15"
                                    MouseLeftButtonUp="SearchGroupsHandler"
                                />
                                <TextBlock
                                    Text="Обсуждения"
                                    Margin="15"
                                    MouseLeftButtonUp="OpenDiscussionsHandler"
                                />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
            </TabItem>
            <TabItem
                Visibility="Collapsed"    
            >
                <ScrollViewer>
                    <DockPanel
                        Background="Green"    
                    >
                        <StackPanel
                            Margin="175 0"
                        >
                            <StackPanel.Background>
                                <LinearGradientBrush>
                                    <LinearGradientBrush.GradientStops>
                                        <GradientStopCollection>
                                            <GradientStop
                                                x:Name="profileThemeAside"
                                                Color="Blue"
                                            />
                                            <GradientStop
                                                Color="Blue"
                                            />
                                        </GradientStopCollection>
                                    </LinearGradientBrush.GradientStops>
                                    <LinearGradientBrush.StartPoint>
                                        <Point
                                            X="0"
                                            Y="0"
                                        />
                                    </LinearGradientBrush.StartPoint>
                                    <LinearGradientBrush.EndPoint>
                                        <Point
                                            X="350"
                                            Y="0"
                                        />
                                    </LinearGradientBrush.EndPoint>
                                </LinearGradientBrush>
                            </StackPanel.Background>
                            <DockPanel>
                                <Image
                                    x:Name="userProfileAvatar"
                                    Margin="15"
                                    Width="200"    
                                    Height="200"    
                                    ImageFailed="SetDefautAvatarHandler"
                                >
                                    <Image.Source>
                                        <BitmapImage
                                            UriSource="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male-128.png"    
                                        />
                                    </Image.Source>
                                </Image>
                                <StackPanel>
                                    <TextBlock
                                        x:Name="userProfileNameLabel"
                                        Margin="15"
                                        FontSize="24"
                                        Text="Имя пользователя"    
                                    />
                                    <TextBlock
                                        x:Name="userProfileAboutLabel"
                                        Margin="15"
                                        FontSize="14"
                                        Text="Россия"    
                                    />
                                </StackPanel>
                                <StackPanel
                                    HorizontalAlignment="Right"    
                                >
                                    <TextBlock
                                        FontSize="20"
                                        Text="Уровень 0"
                                        Margin="25 15"
                                    />
                                    <Button
                                        x:Name="editProfileBtn"
                                        Margin="25 15"
                                        HorizontalAlignment="Right"
                                        Width="175"
                                        Height="35"
                                        Content="{x:Static p:Resources.editProfileBtnContent}"
                                        Click="OpenEditProfileHandler"
                                    />
                                    <StackPanel
                                        x:Name="otherUserBtns"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal"    
                                    >
                                        <Button
                                            x:Name="openChatBtn"
                                            Margin="25 0"
                                            HorizontalAlignment="Right"
                                            Width="175"
                                            Height="35"
                                            Content="Написать"
                                            Click="OpenChatHandler"
                                        />
                                        <Button
                                            Margin="25 0"
                                            HorizontalAlignment="Right"
                                            Width="50"
                                            Height="35"
                                            Content="..."
                                            Click="OpenFriendProfilePopupHandler"
                                        />
                                        <Popup
                                            x:Name="friendProfilePopup"
                                            Placement="Mouse"
                                            StaysOpen="False"
                                            Width="250"
                                            Height="265"
                                        >
                                            <Popup.Child>
                                                <StackPanel
                                                    Background="LightGray"    
                                                >
                                                    <StackPanel
                                                        Margin="10"
                                                        Orientation="Horizontal"
                                                    >
                                                        <materialDesign:PackIcon
                                                            Kind="GroupAdd"    
                                                        />
                                                        <TextBlock
                                                            Margin="15 0"
                                                            Text="Пригласить в группу"    
                                                            MouseLeftButtonUp="AddGroupRequestHandler"
                                                        />
                                                    </StackPanel>
                                                    <StackPanel
                                                        Margin="10"
                                                        Orientation="Horizontal"
                                                    >
                                                        <materialDesign:PackIcon
                                                            Kind="Heart"    
                                                        />
                                                        <TextBlock
                                                            Margin="15 0"
                                                            Text="Отписаться"    
                                                        />
                                                    </StackPanel>
                                                    <StackPanel
                                                        Margin="10"
                                                        Orientation="Horizontal"
                                                    >
                                                        <materialDesign:PackIcon
                                                            Kind="Edit"    
                                                        />
                                                        <TextBlock
                                                            Margin="15 0"
                                                            Text="Добавить ник"    
                                                        />
                                                    </StackPanel>
                                                    <StackPanel
                                                        Margin="10"
                                                        Orientation="Horizontal"
                                                    >
                                                        <materialDesign:PackIcon
                                                            Kind="Sync"    
                                                        />
                                                        <TextBlock
                                                            Margin="15 0"
                                                            Text="Предложить обмен"    
                                                        />
                                                    </StackPanel>
                                                    <StackPanel
                                                        Margin="10"
                                                        Orientation="Horizontal"
                                                    >
                                                        <materialDesign:PackIcon
                                                            Kind="Block"    
                                                        />
                                                        <TextBlock
                                                            Margin="15 0"
                                                            Text="Добавить в черный список"    
                                                        />
                                                    </StackPanel>
                                                    <StackPanel
                                                        Margin="10"
                                                        Orientation="Horizontal"
                                                    >
                                                        <materialDesign:PackIcon
                                                            Kind="Flag"    
                                                        />
                                                        <TextBlock
                                                            Margin="15 0"
                                                            Text="Пожаловаться"    
                                                        />
                                                    </StackPanel>
                                                    <StackPanel
                                                        Margin="10"
                                                        Orientation="Horizontal"
                                                    >
                                                        <materialDesign:PackIcon
                                                            Kind="User"
                                                        />
                                                        <TextBlock
                                                            Margin="15 0"
                                                            Text="Удалить из друзей"
                                                            MouseLeftButtonUp="RemoveFriendHandler"
                                                        />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Popup.Child>
                                        </Popup>
                                    </StackPanel>
                                </StackPanel>
                            </DockPanel>
                            <DockPanel>
                                <DockPanel
                                    x:Name="userProfileDetails"
                                    Margin="25"
                                >
                                    <StackPanel
                                        Margin="25"
                                        DockPanel.Dock="Right"
                                        Width="350"
                                    >
                                        <StackPanel
                                            Margin="0 10"
                                            Orientation="Horizontal"    
                                        >
                                            <TextBlock
                                                x:Name="userProfileStatusLabel"
                                                Margin="10 0"
                                                Text="{x:Static p:Resources.offlineLabelContent}"    
                                                FontSize="20"
                                                Foreground="White"
                                            />
                                        </StackPanel>
                                        <StackPanel
                                            x:Name="userProfileDetailsGames"
                                            Margin="0 10"
                                            Orientation="Horizontal"    
                                        >
                                            <TextBlock
                                                Margin="10 0"
                                                Text="{x:Static p:Resources.gamesLabelContent}"    
                                                FontSize="20"
                                                Foreground="White"
                                            />
                                            <TextBlock
                                                x:Name="countGamesLabel"
                                                Margin="10 0"
                                                Text="0"    
                                                FontSize="18"
                                                Foreground="LightGray"
                                            />
                                        </StackPanel>
                                        <StackPanel
                                            x:Name="userProfileDetailsFriends"
                                            Margin="0 10"
                                            Orientation="Horizontal"    
                                        >
                                            <TextBlock
                                                Margin="10 0"
                                                Text="{x:Static p:Resources.friendsLabelContent}"    
                                                FontSize="20"
                                                Foreground="White"
                                            />
                                            <TextBlock
                                                x:Name="countFriendsLabel"
                                                Margin="10 0"
                                                Text="0"    
                                                FontSize="18"
                                                Foreground="LightGray"
                                            />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel
                                        x:Name="gamesInfo"
                                        Margin="25"
                                    >
                                        <!--
                                        <DockPanel
                                            Background="DarkGray"
                                            Height="150"
                                        >
                                            <Image
                                                Width="125"
                                                Height="125"
                                                Margin="10"    
                                            >
                                                <Image.Source>
                                                    <BitmapImage
                                                        UriSource="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male-128.png"    
                                                    />
                                                </Image.Source>
                                            </Image>
                                            <TextBlock
                                                Margin="10"
                                                FontSize="18"
                                                Text="Название игры"
                                            />
                                            <StackPanel
                                                Margin="10"    
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Right"
                                            >
                                                <TextBlock
                                                    Margin="0 5"    
                                                    Text="0 часов всего"    
                                                />
                                                <TextBlock
                                                    Margin="0 5"    
                                                    Text="Последний запуск 15 апр"    
                                                />
                                            </StackPanel>
                                        </DockPanel>
                                        -->
                                    </StackPanel>
                                </DockPanel>
                            </DockPanel>
                            <StackPanel
                                x:Name="comments"    
                            />
                            <StackPanel
                                Orientation="Horizontal"    
                            >
                                <Image
                                    x:Name="userProfileCommentAvatar"
                                    Margin="15"
                                    Width="50"    
                                    Height="50"    
                                >
                                    <Image.Source>
                                        <BitmapImage
                                            UriSource="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male-128.png"    
                                        />
                                    </Image.Source>
                                </Image>
                                <TextBox
                                    x:Name="userProfileCommentBox"
                                    Height="35"
                                    Width="750"
                                    TextChanged="ToggleCommentFooterHandler"
                                >
                                    <TextBox.Resources>
                                        <VisualBrush
                                            x:Key="hinttext"
                                            AlignmentX="Left"
                                            Stretch="None"
                                            TileMode="None"
                                        >
                                            <VisualBrush.Visual>
                                                <DockPanel>
                                                    <TextBlock
                                                    Height="35"
                                                    Width="750"
                                                    Text="Оставить комментарий"
                                                    Foreground="#959595"
                                                    Background="White"
                                                />
                                                </DockPanel>
                                            </VisualBrush.Visual>
