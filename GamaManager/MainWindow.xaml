                                                HorizontalAlignment="Left"
                                                Width="175"    
                                                Margin="0 10"
                                            />
                                        </StackPanel>
                                        <TextBlock
                                            Text="Местоположение"    
                                            FontSize="18"
                                        />
                                        <Separator
                                            Margin="0 10"    
                                        />
                                        <StackPanel
                                            Margin="15 0 0 0"    
                                        >
                                            <TextBlock
                                                Text="Страна"     
                                                Margin="0 5"
                                                FontSize="16"
                                            />
                                            <ComboBox
                                                x:Name="userCountryBox"
                                                HorizontalAlignment="Left"
                                                Width="175"    
                                                Margin="0 10"    
                                                SelectedIndex="0"
                                            >
                                                <ComboBoxItem
                                                    Content="Россия"    
                                                />
                                                <ComboBoxItem
                                                    Content="USA"    
                                                />
                                            </ComboBox>
                                        </StackPanel>
                                        <TextBlock
                                            Text="О себе"    
                                            FontSize="18"
                                        />
                                        <Separator
                                            Margin="0 10"    
                                        />
                                        <StackPanel
                                            Margin="15 0 0 0"    
                                        >
                                            <TextBox
                                                x:Name="userAboutBox"
                                                Height="125"
                                                AcceptsReturn="True"
                                                HorizontalAlignment="Left"
                                                Width="575"    
                                                Margin="0 10"
                                            />
                                        </StackPanel>
                                        <StackPanel
                                            Orientation="Horizontal"    
                                            Margin="0 25"
                                        >
                                            <Button
                                                Margin="10 0"
                                                Height="35"
                                                Width="125"
                                                Content="Отмена"    
                                            />
                                            <Button
                                                Margin="10 0"
                                                Width="125"
                                                Content="Сохранить"
                                                Click="SaveUserInfoHandler"
                                            />
                                        </StackPanel>
                                    </StackPanel>
                                </DockPanel>
                            </DockPanel>
                        </StackPanel>
                    </DockPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem
                Visibility="Collapsed"    
            >
                <ScrollViewer>
                    <DockPanel
                        Background="Green"    
                    >
                        <StackPanel
                            Margin="175 0"
                            Background="Blue"    
                        >
                            <TextBlock
                                x:Name="statsHeaderLabel"
                                Margin="10"
                                FontSize="24"
                                Text="СТАТИСТИКА Office Game Manager И ИГРОВАЯ СТАТИСТИКА: 01 января 2000 В 00:00"
                            />
                        </StackPanel>
                    </DockPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
