            <TabItem
                Visibility="Collapsed"    
            >
                <ScrollViewer>
                    <DockPanel
                        Background="Green"    
                    >
                        <StackPanel
                            Margin="175 0"
                            Background="Blue"    
                        >
                            <DockPanel>
                                <Image
                                    Margin="15"
                                    Width="100"    
                                    Height="100"    
                                >
                                    <Image.Source>
                                        <BitmapImage
                                            UriSource="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male-128.png"    
                                        />
                                    </Image.Source>
                                </Image>
                                <StackPanel
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"    
                                >
                                    <TextBlock
                                        x:Name="userEditProfileNameLabel"
                                        VerticalAlignment="Center"
                                        Margin="15 5"
                                        FontSize="24"
                                        Text="Имя пользователя"    
                                    />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Margin="15 5"
                                        Text=">> Редактировать профиль"   
                                    />
                                </StackPanel>
                            </DockPanel>
                            <DockPanel>
                                <DockPanel
                                    Margin="25"
                                >
                                    <StackPanel
                                        Margin="25"
                                        DockPanel.Dock="Left"
                                        Width="350"
                                    >
                                        
                                    </StackPanel>
                                    <StackPanel
                                        Margin="25"
                                    >
                                        <TextBlock
                                            Text="Основное"    
                                            FontSize="18"
                                        />
                                        <Separator
                                            Margin="0 10"    
                                        />
                                        <StackPanel
                                            Margin="15 0 0 0"    
                                        >
                                            <TextBlock
                                                Text="Имя профиля"     
                                                Margin="0 5"
                                                FontSize="16"
                                            />
                                            <TextBox
