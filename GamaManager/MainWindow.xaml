<Window
    x:Name="mainWindow"
    x:Class="GamaManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GamaManager"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    xmlns:p="clr-namespace:GamaManager.Properties"
    xmlns:sparrow="http://sparrowtoolkit.codeplex.com/wpf"
    xmlns:oxy="http://oxyplot.org/wpf"        
    xmlns:controls="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls"        
    xmlns:uwp="clr-namespace:UWPHost;assembly=UWPHost"
    Title="Office Ware Game Manager"
    Height="450"
    Width="800"
    WindowState="Maximized"
    Loaded="ClientLoadedHandler"
    Closed="ClientClosedHandler"
>
    <Window.Resources>
        <Storyboard x:Key="HighLightAnim">
            <ThicknessAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="highlight_bar" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                <SplineThicknessKeyFrame/>
                <SplineThicknessKeyFrame/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <DockPanel
        x:Name="game"
    >
        <MediaElement
            x:Name="mainAudio"
            LoadedBehavior="Manual"
            Source="/Sounds/notification.wav"
        />
        <StackPanel
            x:Name="talkNotifications"    
            DockPanel.Dock="Top"
        />
        <StackPanel
            x:Name="friendNotifications"    
            DockPanel.Dock="Top"
        >
        </StackPanel>
        <StackPanel
            x:Name="friendRequests"    
            DockPanel.Dock="Top"
        />
        <StackPanel
            x:Name="groupRequests"    
            DockPanel.Dock="Top"
        />
        <Menu
            DockPanel.Dock="Top"    
        >
            <MenuItem
                Header="Office ware game manager"    
            >
                <MenuItem
                    Header="{x:Static p:Resources.gameManagerMenuItemLoginToAnotherAccountLabelContent}"
                    Click="LoginToAnotherAccountHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.gameManagerMenuItemSettingsLabelContent}"
                    Click="OpenSettingsHandler"    
                />
            </MenuItem>
            <MenuItem
                Header="{x:Static p:Resources.viewMenuItemLabelContent}"    
            >
                <MenuItem
                    Header="{x:Static p:Resources.viewMenuItemHiddenGamesLabelContent}"
                    Click="OpenHiddenGamesHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.viewMenuItemPlayerLabelContent}"
                    Click="OpenPlayerHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.viewMenuItemScreenShotsLabelContent}"
                    Click="ShowScreenShotUploadersDialogHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.newsUpdatedLabelContent}"
                    Click="ShowOffersHandler"
                />
            </MenuItem>
            <MenuItem
                Header="{x:Static p:Resources.friendsMenuItemLabelContent}"    
            >
                <MenuItem
                    x:Name="friendsListLabel"
                    Header="{x:Static p:Resources.friendsListLabelContent}"
                    Click="OpenFriendsDialogHandler"
                />
                <Separator />
                <MenuItem
                    Header="{x:Static p:Resources.friendsMenuItemAddFriendLabelContent}"
                    Click="OpenAddFriendDialogHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.updateNameOrAvatarLabelContent}"
                    Click="SetNameOrAvatarHandler"
                />
                <Separator />
                <MenuItem
                    x:Name="onlineUserStatusMenuItem"
                    IsCheckable="True"
                    Header="{x:Static p:Resources.onlineLabelContent}"
                    DataContext="online"
                    Click="UpdateUserStatusHandler"
                />
                <!--
                <MenuItem
                    Header="Нет на месте"
                    DataContext="not here"
                    Click="UpdateUserStatusHandler"
                />
                <MenuItem
                    Header="Отошел"
                    DataContext="away"
                    Click="UpdateUserStatusHandler"
                />
                -->
                <MenuItem
                    x:Name="offlineUserStatusMenuItem"
                    IsCheckable="True"
                    Header="{x:Static p:Resources.offlineLabelContent}"
                    DataContext="offline"
                    Click="UpdateUserStatusHandler"
                />
            </MenuItem>
            <MenuItem
                Header="{x:Static p:Resources.gamesMenuItemContent}"
            >
                <MenuItem
                    Header="{x:Static p:Resources.gamesLibraryLabelContent}"    
                    Click="OpenGamesLibraryHandler"
                />
                <Separator />
                <MenuItem
                    Header="{x:Static p:Resources.activateGameLabelContent}"    
                    Click="OpenGameActivationHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.addExternalGameToMyLibraryLabelContent}"    
                    Click="AddExternalGameHandler"
                />
            </MenuItem>
            <MenuItem
                Header="{x:Static p:Resources.helpMenuItemLabelContent}"    
            >
                <MenuItem
                    Header="{x:Static p:Resources.helpMenuItemSubSupportServiceLabelContent}"
                    Click="OpenSupportServiceHandler"
                />
                <Separator />
                <MenuItem
                    Header="{x:Static p:Resources.helpMenuItemPrivacyInfoLabelContent}"
                    Click="OpenPrivacyInfoHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.helpMenuItemLawInfoLabelContent}"
                    Click="OpenLawInfoHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.helpMenuItemSubAgreementLabelContent}"
                    Click="OpenSubAggermentHandler"
                />
                <Separator />
                <MenuItem
                    Header="{x:Static p:Resources.helpMenuItemSystemInfoLabelContent}"
                    Click="OpenSystemInfoDialogHandler"
                />
                <MenuItem
                    Header="{x:Static p:Resources.helpMenuItemAboutOfficeWareGameManagerLabelContent}"
                    Click="OpenAboutManagerDialogHandler"
                />
            </MenuItem>
        </Menu>
        <DockPanel
            DockPanel.Dock="Bottom"
            Height="35"
            Background="LightGray"
        >
            <Popup
                x:Name="addGamePopup"
                Width="250"
                Height="80"
                Placement="Mouse"
                StaysOpen="False"
            >
                <Popup.Child>
                    <StackPanel
                        Background="LightGray"     
                    >
                        <TextBlock
                            Margin="15 5"
                            Text="Добавить сторонюю игру"    
                            MouseLeftButtonUp="AddExternalGameHandler"
                        />
                        <TextBlock
                            Margin="15 5"
                            Text="Активировать"    
                            MouseLeftButtonUp="OpenGameActivationHandler"
                        />
                        <TextBlock
                            Margin="15 5"
                            Text="Просмотреть игры в магазине"    
                            MouseLeftButtonUp="OpenStoreHandler"
                        />
                    </StackPanel>
                </Popup.Child>
            </Popup>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                MouseLeftButtonUp="ToggleAddGamePopupHandler"
            >
                <materialDesign:PackIcon
                    Margin="5 0"
                    VerticalAlignment="Center"
                    Kind="AddBox"    
                />
                <TextBlock
                    Margin="5 0"
                    VerticalAlignment="Center"
                    Text="{x:Static p:Resources.addGameBtnContent}"
                />
            </StackPanel>
            <StackPanel
                Margin="555 0"
                HorizontalAlignment="Center"
                MouseLeftButtonUp="OpenDownloadsHandler"
            >
                <TextBlock
                    TextAlignment="Center"
                    Margin="10 0"
                    FontSize="14"
                    Text="{x:Static p:Resources.downloadsLabelContent}"
                />
                <TextBlock
                    TextAlignment="Center"
                    Margin="10 0"
                    Text="{x:Static p:Resources.controlLabelContent}"
                />
            </StackPanel>
            <StackPanel
                HorizontalAlignment="Right"
                Margin="0 10"
                Orientation="Horizontal"    
                MouseLeftButtonUp="OpenFriendsDialogHandler"
            >
                <TextBlock
                    Margin="10 0"
                    Text="{x:Static p:Resources.friendsAndChatLabelContent}"
                />
                <materialDesign:PackIcon
                    Margin="10 0"
                    Width="15"
                    Height="15"
                    Kind="AddCircleOutline"    
                />
            </StackPanel>

        </DockPanel>
        <StackPanel
            DockPanel.Dock="Top"
            Height="35"
            Background="LightGray"
        >
            <StackPanel
                Orientation="Horizontal"    
            >
                <materialDesign:PackIcon
                    x:Name="arrowBackBtn"
                    Kind="ArrowBack"
                    Width="20"
                    Height="20"
                    Margin="10"
                    Foreground="LightGray"
                    MouseLeftButtonUp="BackForHistoryHandler"
                />
                <materialDesign:PackIcon
                    x:Name="arrowForwardBtn"
                    Kind="ArrowForward"
                    Width="20"
                    Height="20"
                    Margin="10"
                    Foreground="LightGray"
                    MouseLeftButtonUp="ForwardForHistoryHandler"
                />
                <ComboBox
                    x:Name="storeMenu"
                    Margin="5 0"
                    Width="125"
                    HorizontalContentAlignment="Center"
                    Height="25"
                    SelectedIndex="0"
                    SelectionChanged="StoreItemSelectedHandler"
                >
                    <ComboBoxItem
                        Visibility="Collapsed"
                        Content="{x:Static p:Resources.storeMenuLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.storeMenuItemPopularLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.storeMenuItemRecomendationsLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.storeMenuItemWishesListLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.storeMenuItemPointsStoreLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.storeMenuItemNewsLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.storeMenuItemStatsLabelContent}"
                    />
                </ComboBox>
                <ComboBox
                    x:Name="libraryMenu"
                    Margin="5 0"
                    Width="125"
                    HorizontalContentAlignment="Center"
                    Height="25"
                    SelectedIndex="0"    
                    SelectionChanged="LibraryItemSelectedHandler"
                >
                    <ComboBoxItem
                        Visibility="Collapsed"
                        Content="{x:Static p:Resources.libraryMenuLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.libraryMenuItemHomeLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.libraryMenuItemCollectionsLabelContent}"    
                    />
                    <Separator />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.libraryMenuItemDownloadsLabelContent}"
                    />
                </ComboBox>
                <ComboBox
                    x:Name="communityMenu"
                    Margin="5 0"
                    Width="125"
                    HorizontalContentAlignment="Center"
                    Height="25"
                    SelectedIndex="0"    
                    SelectionChanged="CommunityItemSelectedHandler"
                >
                    <ComboBoxItem
                        Visibility="Collapsed"
                        Content="{x:Static p:Resources.communityMenuLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.communityMenuItemMainLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.communityMenuItemDiscussionsLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.communityMenuItemWorkShopLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.communityMenuItemTradeLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.communityMenuItemStreamsLabelContent}"
                    />
                </ComboBox>
                <ComboBox
                    x:Name="profileMenu"
                    Margin="5 0"
                    Width="175"
                    HorizontalContentAlignment="Center"
                    Height="25"
                    SelectedIndex="0" 
                    SelectionChanged="ProfileItemSelectedHandler"
                >
                    <ComboBoxItem
                        Visibility="Collapsed"
                        Content="Имя пользователя"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.profileMenuItemActivityLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.profileMenuItemProfileLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.friendsLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.groupsLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.profileMenuItemContentLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.profileMenuItemIconsLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.profileMenuItemEquipmentLabelContent}"    
                    />
                </ComboBox>
                <materialDesign:PackIcon
                    x:Name="familyViewIcon"
                    Foreground="Orange"
                    Visibility="Collapsed"
                    Margin="175 10 10 10"
                    Kind="People"
                    VerticalAlignment="Center"
                    Width="24"
                    Height="24"
                    MouseLeftButtonUp="ShowFamilyViewPopupHandler"
                />
                <Popup
                    x:Name="familyViewPopup"
                    StaysOpen="False"
                    Placement="Mouse"
                    Width="350"
                    Height="350"
                >
                    <Popup.Child>
                        <StackPanel
                            Background="LightGray"    
                        >
                            <TextBlock
                                Margin="15"
                                Text="Семейный просмотр"    
                            />
                            <TabControl
                                x:Name="familyViewPopupControl"
                                Background="Transparent"
                                BorderThickness="0"
                                SelectedIndex="0"
                            >
                                <TabItem
                                    Visibility="Collapsed"    
                                >
                                    <StackPanel>
                                        <TextBlock
                                            Margin="15"
                                            Text="Введите свой ПИН ниже, чтобы выйти из&#10;семейного просмотра"    
                                        />
                                        <TextBox
                                            x:Name="familyViewPopupCodeBox"
                                            Width="100"
                                            Height="30"
                                        />
                                    </StackPanel>
                                </TabItem>
                                <TabItem
                                    Visibility="Collapsed"    
                                >
                                    <StackPanel>
                                        <TextBlock
                                            Margin="15"
                                            Text="Пожалуйста подтвердите, что вы хотите вернуться в&#10;семейного просмотр."    
                                        />
                                    </StackPanel>
                                </TabItem>
                            </TabControl>
                            <StackPanel
                                Margin="0 15"
                                Orientation="Horizontal"    
                            >
                                <Button
                                    Margin="15 0"
                                    Width="125"
                                    Height="30"
                                    Content="ОК"
                                    Click="ToggleFamilyViewModeHandler"
                                />
                                <Button
                                    Margin="15 0"
                                    Width="125"
                                    Height="30"
                                    Content="Отмена"
                                    Click="CloseFamilyViewPopupHandler"
                                />
                            </StackPanel>
                        </StackPanel>
                    </Popup.Child>
                </Popup>
                <materialDesign:PackIcon
                    x:Name="newsPopupIcon"
                    Margin="10 0"
                    Kind="Megaphone"
                    VerticalAlignment="Center"
                    Width="24"
                    Height="24"
                    MouseLeftButtonUp="OpenNewsHandler"
                />
                <materialDesign:PackIcon
                    x:Name="notificationsPopupIcon"
                    Margin="10 0"
                    Kind="Email"
                    VerticalAlignment="Center"
                    Width="24"
                    Height="24"
                    MouseLeftButtonUp="ToggleNotificationsPopupHandler"
                />
                <Popup
                    x:Name="notificationsPopup"
                    Placement="Mouse"
                    StaysOpen="False"
                    Width="350"
                    Height="165"
                    Closed="HideNotificationsPopupHightLightHandler"
                >
                    <Popup.Child>
                        <StackPanel
                            Background="LightGray"    
                        >
                            <StackPanel
                                Margin="10"
                                Orientation="Horizontal"
                            >
                                <materialDesign:PackIcon
                                    Kind="Chat"    
                                />
                                <TextBlock
                                    Margin="15 0"
                                    Text="Новых комментариев: 0"    
                                />
                            </StackPanel>    
                            <Separator />
                            <StackPanel
                                Margin="10"
                                Orientation="Horizontal"
                            >
                                <materialDesign:PackIcon
                                    Kind="Storage"    
                                />
                                <TextBlock
                                    Margin="15 0"
                                    Text="Новых предметов: 0"    
                                />
                            </StackPanel>                            
                            <Separator />
                            <StackPanel
                                Margin="10"
                                Orientation="Horizontal"
                            >
                                <materialDesign:PackIcon
                                    Kind="Add"    
                                />
                                <TextBlock
                                    x:Name="countNewRequestsLabel"
                                    Margin="15 0"
                                    Text="Новых приглашений: 0"    
                                />
                            </StackPanel>
                            <Separator />
                            <StackPanel
                                Margin="10"
                                Orientation="Horizontal"
                            >
                                <materialDesign:PackIcon
                                    Kind="Present"    
                                />
                                <TextBlock
                                    Margin="15 0"
                                    Text="Новых подарков: 0"    
                                />
                            </StackPanel>
                        </StackPanel>
                    </Popup.Child>
                </Popup>
                <ComboBox
                    x:Name="userMenu"
                    Margin="10"
                    Width="175"
                    SelectedIndex="0"
                    SelectionChanged="UserMenuItemSelectedHandler"
                >
                    <ComboBoxItem
                        Visibility="Collapsed"
                        Content="Имя пользователя"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.myProfileLabelContent}"
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.accountInfoLabelContent}"        
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.logoutLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.storeSettingsLabelContent}"    
                    />
                    <ComboBoxItem
                        Content="{x:Static p:Resources.walletLabelContent}"    
                    />
                </ComboBox>
                <materialDesign:PackIcon
                    Kind="Rectangle"
                    VerticalAlignment="Center"
                    Margin="15 0"
                    Width="24"
                    Height="24"
                    MouseLeftButtonUp="ToggleFullScreenModeHandler"
                />
            </StackPanel>
            <!--
                <TextBlock
                    x:Name="userLoginLabel"
                    Text="Имя пользователя"
                    Margin="10"
                    HorizontalAlignment="Right"
                />
            -->
        </StackPanel>
        <TabControl
            x:Name="mainControl"
            SelectedIndex="0"
            SelectionChanged="ToggleWindowHandler"
        >
            <TabItem
                Visibility="Collapsed"    
            >
                <DockPanel>
                    <DockPanel
                        DockPanel.Dock="Left"    
                        Background="LIghtGray"
                    >
                        <StackPanel
                            DockPanel.Dock="Top"
                        >
                            <StackPanel
                                Height="20"
                                Orientation="Horizontal"    
                                Margin="0 5"
                            >
                                <StackPanel
                                    Width="250"
                                    Margin="15 0"
                                >
                                    <TextBlock
                                        Text="Библиотека"    
                                        FontSize="18"
                                    />
                                </StackPanel>
                                <materialDesign:PackIcon
                                    Kind="Apps"
                                    MouseLeftButtonUp="OpenCollectionsHandler"
                                />
                            </StackPanel>
                            <StackPanel
                                Margin="5"
                                Height="30"
                                Orientation="Horizontal"    
                            >
                                <ComboBox
                                    Margin="15 5"
                                    Width="175"
                                    Height="25"
                                    SelectedIndex="0"    
                                >
                                    <ComboBoxItem
                                        Content="Игры"    
                                    />
                                    <ComboBoxItem
                                        Content="Инструменты"    
                                    />
                                    <Separator />
                                    <ComboBoxItem
                                        Content="Группировать по коллекциям"    
                                    />
                                </ComboBox>
                                <materialDesign:PackIcon
                                    x:Name="sortGamesByRecentActivityIcon"
                                    Kind="Recent"    
                                    Margin="15 0"
                                    VerticalAlignment="Center"
                                    MouseLeftButtonUp="ToggleRecentActivityHandler"
                                />
                                <materialDesign:PackIcon
                                    x:Name="sortGamesByReady2GoIcon"
                                    Kind="PlayCircleOutline"    
                                    Margin="15 0"
                                    VerticalAlignment="Center"
                                    MouseLeftButtonUp="ToggleReady2GoHandler"
                                />
                            </StackPanel>
                            <StackPanel
                                Orientation="Horizontal"    
                            >
                                <TextBox
                                    x:Name="keywordsLabel"
                                    Margin="5"
                                    Height="25"
                                    Width="250"
                                    TextChanged="FilterGamesHandler"
                                >
                                    <TextBox.Resources>
                                        <VisualBrush
                                            x:Key="hinttext"
                                            AlignmentX="Left"
                                            Stretch="None"
                                            TileMode="None"
                                        >
                                            <VisualBrush.Visual>
                                                <DockPanel>
                                                    <TextBlock
                                                        Margin="5"
                                                        Height="35"
                                                        Width="750"
                                                        Text="Поиск по названию"
                                                        Foreground="#959595"
                                                        Background="White"
                                                    />
                                                </DockPanel>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </TextBox.Resources>
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="FontSize" Value="12" />
                                            <Setter Property="Width" Value="Auto" />
                                            <Setter Property="Width" Value="Auto" />
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background" Value="{StaticResource hinttext}" />
                                                </Trigger>
                                                <Trigger Property="Text" Value="{x:Null}">
                                                    <Setter Property="Background" Value="{StaticResource hinttext}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <materialDesign:PackIcon
                                    x:Name="clearGamesListFilterIcon"
                                    Kind="Close"
                                    VerticalAlignment="Center"
                                    Margin="5 0"
                                    MouseLeftButtonUp="ClearGameListFilterHandler"
                                />
                                <materialDesign:PackIcon
                                    Kind="HorizontalLine"
                                    VerticalAlignment="Center"
                                    Margin="5 0"
                                    MouseLeftButtonUp="OpenKeywordsLabelFilterPopupHandler"
                                />
                                <Popup
                                    x:Name="keywordsLabelFilterPopup"
                                    StaysOpen="False"
                                    Placement="Right"
                                    PlacementTarget="{Binding ElementName=keywordsLabel}"
                                    Width="500"
                                    Height="350"
                                >
                                    <Popup.Child>
                                        <StackPanel
                                            Background="LightGray"    
                                        >
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    Margin="5"
                                                    Text="Игроки"
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    FontSize="16"
                                                    Foreground="Blue"
                                                />
                                                <TextBlock
                                                    Margin="5"
                                                    Text="Состояние игры"
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    FontSize="16"
                                                    Foreground="Blue"
                                                />
                                                <TextBlock
                                                    Margin="5"
                                                    Text="Жанр"
                                                    Grid.Row="0"
                                                    Grid.Column="2"
                                                    FontSize="16"
                                                    Foreground="Blue"
                                                />
                                                <CheckBox
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    Content="Одиночная игра"    
                                                />
                                                <CheckBox
                                                    x:Name="keywordsLabelFilterPopupReady2GoCheckBox"
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    Content="Готовые к запуску"
                                                    Click="GetGamesListHandler"
                                                />
                                                <CheckBox
                                                    Grid.Row="1"
                                                    Grid.Column="2"
                                                    Margin="5"
                                                    Content="Экшен"    
                                                />
                                                <CheckBox
                                                    Grid.Row="2"
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    Content="Многопользовательская игра"    
                                                />
                                                <CheckBox
                                                    x:Name="keywordsLabelFilterPopupLocalInstalledCheckBox"
                                                    Grid.Row="2"
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    Content="Установленные локально"    
                                                    Click="GetGamesListHandler"
                                                />
                                                <CheckBox
                                                    Grid.Row="2"
                                                    Grid.Column="2"
                                                    Margin="5"
                                                    Content="Приключение"    
                                                />
                                                <CheckBox
                                                    Grid.Row="3"
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    Content="Кооперативная игра"    
                                                />
                                                <CheckBox
                                                    Grid.Row="3"
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    Content="Запущенные"    
                                                />
                                                <CheckBox
                                                    Grid.Row="3"
                                                    Grid.Column="2"
                                                    Margin="5"
                                                    Content="Казуальная игра"    
                                                />
                                                <CheckBox
                                                    Grid.Row="4"
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    Content="Незапущенные"    
                                                />
                                                <CheckBox
                                                    Grid.Row="4"
                                                    Grid.Column="2"
                                                    Margin="5"
