<Window x:Class="GamaManager.Dialogs.ChatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamaManager.Dialogs"
        mc:Ignorable="d"
        Title="Чат"
        Height="500"
        Width="800"
        Loaded="InitializeHandler"
        GotFocus="StopBlinkWindowHandler"
    >
    <StackPanel>
        <TabControl
            x:Name="chatControl"    
            Height="375"
        />
        <StackPanel>
            <TextBlock
                x:Name="userIsWritingLabel"
                Visibility="Hidden"
                Margin="15 5"
                Text="Пользователь печатает..."    
            />
            <StackPanel
                Orientation="Horizontal"    
            >
                <TextBox
                    x:Name="inputChatMsgBox"    
                    Width="675"
                    Height="25"
                    TextChanged="InputToChatFieldHandler"
                />
                <Button
                    Content="Отправить"
                    Width="125"
                    Height="25"
                    Click="SendMsgHandler"
                />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
